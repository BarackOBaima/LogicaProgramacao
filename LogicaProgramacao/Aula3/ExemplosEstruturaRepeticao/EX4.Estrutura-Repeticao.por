{
//Desafio 2:** Desenvolver um programa que exiba os números em ordem decrescente de 100 até 1.
	inclua biblioteca Util --> u
	
	funcao inicio()
	{
		inteiro contador = 100
		enquanto(contador > 0){
		escreva(contador + "\n")
			contador--
			Util.aguarde(1000)
		}
	}
}
